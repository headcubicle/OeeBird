<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="jp.headcubicle.oeebird.MainActivity" >

    <!-- 自分のツイッターアカウント -->
    <TextView 
        android:id="@+id/my_twitter_account_label"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/label_my_twitter_account"
        />
    <EditText 
        android:id="@+id/my_twitter_account"
       	android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:inputType="text"/>

    <!-- 自分のツイッターパスワード -->
    <TextView 
        android:id="@+id/my_twitter_password_label"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/label_my_twitter_password"
        />
    <EditText 
        android:id="@+id/my_twitter_password"
       	android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:inputType="textPassword"/>

    <!-- リプライを送るツイッターアカウント -->
    <TextView 
        android:id="@+id/target_twitter_account_label"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/label_target_twitter_account"
        />
    <EditText 
        android:id="@+id/target_twitter_account"
       	android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:inputType="text"/>
    
    <!-- リプライの内容 -->
    <TextView 
        android:id="@+id/reply_text_label"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/label_reply_text"
        />
    <EditText 
        android:id="@+id/reply_text"
       	android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:inputType="text"/>
    
    <!-- 末尾 -->
    <TextView 
        android:id="@+id/tail_text_label"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/label_tail_text"
        />
    <EditText 
        android:id="@+id/tail_text"
       	android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:inputType="text"/>
    
    <!-- 設定 -->
    <Button
        android:id="@+id/button_setting"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_label_setting" />

    <!-- サービス起動 -->
    <Button
        android:id="@+id/button_run"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_label_run" />

</LinearLayout>