<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="jp.headcubicle.oeebird.MainActivity" >

    <!-- Replyを送るTwitterユーザ -->
    <TextView 
        android:id="@+id/target_twitter_user_label"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/label_target_twitter_user"
        />
    <EditText 
        android:id="@+id/target_twitter_user"
           android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:inputType="text"/>
    
    <!-- Replyを送るTwitterに含まれるキーワード -->
    <TextView 
        android:id="@+id/target_tweet_keyword_label"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/label_target_tweet_keyword"
        />
    <EditText 
        android:id="@+id/target_tweet_keyword"
           android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:inputType="text"/>
    
    <!-- Replyの内容 -->
    <TextView 
        android:id="@+id/reply_text_label"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/label_reply_text"
        />
    <EditText 
        android:id="@+id/reply_text"
           android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:inputType="text"/>
    
    <!-- 末尾 -->
    <TextView 
        android:id="@+id/tail_text_label"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/label_tail_text"
        />
    <EditText 
        android:id="@+id/tail_text"
           android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:inputType="text"/>
    
    <!-- 設定 -->
    <Button
        android:id="@+id/button_settings"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_label_settings"
        android:onClick="onClickSettings" />

    <!-- サービス起動 -->
    <Button
        android:id="@+id/button_launch"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_label_launch"
        android:onClick="onClickLaunch" />

    <!-- サービス停止 -->
    <Button
        android:id="@+id/button_stop"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_label_stop"
        android:onClick="onClickStop" />
    
</LinearLayout>